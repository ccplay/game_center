-load i18n
-load sizefieldtags
-load humanize
-load less


#screenshots.jcarousel.center-block{'data-jcarousel': 'true', 'data-animation': 'fast'}
  %ul
    - for screenshot in screenshots
      %li
        %a{href:'javascript:void(0);'}
          %img{src:'={screenshot.preview}'}
  %a.jcarousel-control-prev{'data-jcarouselcontrol': 'true'}
    %span.glyphicon.glyphicon-chevron-left
  %a.jcarousel-control-next{'data-jcarouselcontrol': 'true'}
    %span.glyphicon.glyphicon-chevron-right
  %p.jcarousel-pagination{'data-jcarouselpagination': 'true'}<

#information.panel.panel-success
  .panel-heading
    %h3.panel-title<
      {% trans 'Information' %}
  .panel-body.container
    %table.table
      %tbody
        %tr
          %th<
            {% trans 'version' %}:
          %td= version_name
          %th<
            {% trans 'downloads' %}:
          %td= download_count|intcomma
        %tr
          %th<
            {% trans 'size' %}:
          %td= download_size|filesize
          %th<
            {% trans 'release' %}:
          %td= released_datetime|time
        %tr
          %th<
            {% trans 'author' %}:
          %td{cellspan:3}= author.name


#description.panel.panel-success
  .panel-heading
    %h3.panel-title<
      {% trans 'Description' %}
  .panel-body<
    %pre= description

#whatsnew.panel.panel-success
  .panel-heading
    %h3.panel-title<
      {% trans "What's New" %}
  .panel-body<
    %pre= whatsnew

:css
  .jcarousel img {
    height: 300px !important;
  }
  .jcarousel-pagination { bottom: 10px;}


:css
  {% inlineless %}
  .noradius () {
    border-radius: 0px
  }

  .panel {
    .noradius();
    margin-bottom: 0;

    .panel-body pre {
      border: none;
      margin: 0px;
    }

    .table-cell(){
        font-size: 18px;
        th { text-align: right }
        td { text-align: left }
        th,td{ border: none; }
    }

    table {
      thead {
        .table-cell()
      }
      tbody {
        .table-cell()
      }
    }

  }

  .panel-heading {
    .noradius();
  }

  {% endinlineless %}
