%html{lang: '={LANGUAGE_CODE}'}
  %head
    %meta{'http-equiv': 'Content-Type', content: 'text/html; charset=UTF-8'}
    %title<
      {% block meta_title %}{% endblock %}{% if settings.SITE_TITLE %} | {{ settings.SITE_TITLE }}{% endif %}
    %meta{name :"keywords", content :"{% block meta_keywords %}{% endblock %}"}
    %meta{name :"description", content :"{% block meta_description %}{% endblock %}"}
    {% block extra_meta %}
    %meta{name :"robots", content :"INDEX,FOLLOW"}
    {% endblock %}
    %link{href :"{% static 'css/mezzanine.css' %}", rel :"stylesheet"}
    {% block main_css %}
    %link{href :"{% static 'css/main.css' %}", rel :"stylesheet"}
    {% endblock %}
    {% block extra_css %}{% endblock %}
    %script{type :"text/javascript", src :"{% static 'js/jquery.min.js' %}"}
    %script{type :"text/javascript", src :"{% static 'js/jquery.jslides.js' %}"}
    /[if lt IE 9]
      %script{type :"text/javascript", src :"{% static 'js/html5.js' %}" }
    /[if IE 6]
      %script{type :"text/javascript", src :"{% static 'js/ie6.js' %}" }
      :javascript
        DD_belatedPNG.fix('*');
    %link{rel:"shortcut icon", href: "{% static 'image/favicon.ico' %}" }

    {% ifinstalled mezzanine.blog %}
    %link{rel :"alternate", type :"application/rss+xml", title :"RSS", href :"{% url 'blog_post_feed' 'rss'%}"}
    %link{rel :"alternate", type :"application/rss+xml", title :"Atom", href :"{% url 'blog_post_feed' 'atom'%}"}
    {% endifinstalled %}
  %body
    / head
    .topbg
      .top.w980 登录/注册
    {% page_menu "pages/menus/header.haml" %}
    / head end

    {% block before_main %}{% endblock %}

    / main
    .mbg
      {% block main %}{% endblock %}
    {% block main_after %}{% endblock %}
    / main end

    / footer
    %footer.footer
      .foot.w980
        %hgroup.foot_sch
          {% include "pages/widgets/search_form.haml" %}
        {% page_menu "pages/menus/footer_links.haml" %}
    / footer end
    {% include "includes/footer_scripts.html" %}