-load humanize
-load i18n
%h2.mleft_title
  - if more_url
    %span.right
      %a{:href => "={more_url}"} 更多 &gt;
  %b
  = title
.mleftbg
- for package in items
  - with version=package.versions.latest_published
    %dl
      %dt<
        %a{:href => '={version.get_absolute_url}'}<
          %img{:src => "={version.icon.url}", :width => "48", :height => "48", :alt => "={package.title}"}
      %dd.mltitle<
        %span.right<
          %div.star3
        %a{:href => "={version.get_absolute_url}", :title => "={package.title}"}= package.title|slice:":6"
      %dd<
        {% with main_category=package.categories.all.0 %}
        %a{:href => "={main_category.get_absolute_url}"}= main_category.name
        {% endwith %} | {{ version.get_download_size|default:0|filesizeformat }} | {{ package.download_count|intword }}
      %dd<
        %span= version.released_datetime|date:'SHORT_DATE_FORMAT'
