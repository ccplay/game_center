%h3
  - if more_url
    %span.right>
      %a{:href =>"={more_url}"} 更多 &gt;
  = title
{% spaceless %}
%ul.clear
  - for post in items
    %li
      %span.time= post.pub_date
      %a{:href =>"={post.category_url}"}= post.category
      |
      %a{:href =>"={post.url}"}= post.title
{% endspaceless %}
